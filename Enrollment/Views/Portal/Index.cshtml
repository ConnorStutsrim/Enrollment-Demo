                    @Html.DisplayFor(model => model.Person.Gender.GenderName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Person.HomePhone)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Person.CellPhone)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Person.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address.FullAddress)
                </td>
                
            </tr>
        </table>
    </div>
</div>

<br />

<div>
    <h4>Employers</h4>
    <div class="table-responsive">
        <table class="table table-striped col-md-9">
            <tr>
                <th></th>
                <th>
                    Employer
                </th>
                <th>
                    Employment Date
                </th>
                <th>
                    Occupation Code
                </th>
                <th>
                    Work Status
                </th>
                <th>
                    Work Hours
                </th>
                <th>
                    End Date
                </th>
            </tr>

            @foreach (var item in Model.EmploymentInformation)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("EditEmployer", "Portal", new { id = item.EmploymentInformationID })" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true" />
                            <span class="sr-only">Edit</span>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employer.EmployerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HireDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OccupationCode.OccupationCodeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkStatus.WorkStatusName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkHours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
