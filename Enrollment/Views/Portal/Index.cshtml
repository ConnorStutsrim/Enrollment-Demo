    ViewBag.Title = "Summary";
}

<h2>Summary</h2>

<div>
    <h4>Participant</h4>
    <div class="table-responsive">
        <table class="table table-striped col-md-9">
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.SSN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.HomePhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.CellPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address.FullAddress)
                </th>
            </tr>
            <tr>
                <td>
                    <a href="@Url.Action("EditPerson", "Portal", new { id = Model.Person.PersonID })" class="btn btn-default btn-xs">
